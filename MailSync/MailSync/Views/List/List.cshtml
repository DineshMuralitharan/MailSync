@model MailSync.Base.ListDetails
@{
    ViewBag.Title = "List";
}

@section style{

<link href="~/Content/cssminify/group.css" rel="stylesheet" />
    <style>
        .modal {
            text-align: center;
        }

            .modal:before {
                display: inline-block;
                vertical-align: middle;
                content: " ";
                height: 100%;
            }

        .modal-dialog {
            display: inline-block;
            text-align: left;
            vertical-align: middle;
        }

        .unsubscribed {
            background: indianred;
        }

        .subscribed {
            background: #17987e;
        }

        .commentTypeDesc {
            font-weight: 400;
            padding: 2px 4px;
            color: #fff;
            border-radius: 4px;
        }
    </style>
}

@section Scripts {

    <script src="~/Scripts/js/ej2/ej2.config.js"></script>
    <script src="~/Scripts/js/ts/Release/DeleteListUser.js"></script>
    <script type="text/javascript">
        function Alert() {
            setTimeout(function () {
                $('#addModal').modal('hide');
                swal({
                    title: "Success",
                    text: "The user has been added successfully.",
                    type: "success",
                    showCancelButton: false,
                    confirmButtonClass: "btn-default",
                    confirmButtonText: "Ok",
                    cancelButtonText: "No",
                    closeOnConfirm: true,
                    closeOnCancel: false
                },
                    function (isConfirm) {
                        $(".sweet-alert").hide();
                    });
            }, 1000);

        }

    </script>
}
<h2 style="margin-top:50px">@Model.ListName</h2>
<input type="hidden" value="@Model.ListID" id="listId" />
<div class="">
    <input type="button" data-toggle="modal" data-target="#addModal" class="btn pull-right" value="ADD" />

</div>

<div id="releaselist" style="margin-top:70px">

</div>


@*/* Model dailgue*/*@
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel-2">Add User</h4>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label for="example-text-input" class="col-2 col-form-label">Email ID</label>
                    <div class="" style="margin-left:50px;display:inline-block">
                        <input class="form-control" type="text"  id="emailId" style="width:400px">
                    </div>
                </div>
                <div class="form-group">
                    <label for="example-text-input" class="col-2 col-form-label">Name</label>
                    <div class="" style="margin-left:65px;display:inline-block">
                        <input class="form-control" type="text" id="name" style="width:400px">
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-dialog" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-dialog" onclick="Alert()">Ok</button>
            </div>
        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->
