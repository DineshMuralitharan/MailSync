<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MailSync - Keep the customer always engaged using automation.</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Layout.css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("style", required: false)
    <link href="~/Content/StyleSheets/toastr.css" rel="stylesheet" />
    <link href="~/Content/StyleSheets/sweetalert2.css" rel="stylesheet" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/systemjs/0.19.38/system.js"></script>

    <link href="~/Content/cssminify/ej2.min.css" rel="stylesheet" />
</head>
@if (!Request.IsAuthenticated && !Request.Url.AbsoluteUri.Contains("account/login") && Request.Url.AbsolutePath.ToLower() != "/")
            {
                Response.Redirect("/account/login");
            }
@RenderSection("BannerSection", required: false)
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
                <div class="mailsync-logo master-header-left">
                    <a href="@(Url.Action("Index", "Home"))">
                        <span id="logo"></span>
                    </a>
                </div>
                 @*@Html.ActionLink("MailSync", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/campaigns"> Campaign </a></li>
                    <li><a href="/group"> Group </a></li>
                    <li>@Html.ActionLink("Templates", "Index", "Template")</li>
                    <li>@Html.ActionLink("Statistics", "Index", "Statistics")</li>
                    <li><a href="/documentation"> Documentation </a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @if (!Request.Url.AbsolutePath.ToLower().Contains("login") && Request.Url.AbsolutePath.ToLower() != "/")
    {
        <div class="container body-content">
            @RenderBody()
            @*<hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - MailSync</p>
                </footer>*@
        </div>
    }
    else
    {
        <div class="body-content" style="padding:0px!important">
            @RenderBody()
        </div>
    }

    <script src="~/Scripts/js/Others/toastr.min.js"></script>
    <script src="~/Scripts/js/Others/sweetalert2.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
